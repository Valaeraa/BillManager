<Window x:Class="BM.DesktopUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BM.DesktopUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="550"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>

        <TabControl x:Name="TabViewer"
            Grid.Row="1"
            Grid.Column="1"
            SelectionChanged="TabViewer_SelectionChanged"
            TabStripPlacement="Top">
            <TabItem x:Name="MainTab"
                Header="Main" />
            <TabItem x:Name="ClientTab"
                Header="Client" />
            <TabItem x:Name="PaymentTab"
                Header="Payment" />
            <TabItem x:Name="WorkTab"
                Header="Work" />
            <TabItem x:Name="DefaultsTab"
                Header="Defaults" />
        </TabControl>
    </Grid>
</Window>
